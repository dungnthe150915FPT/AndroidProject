<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragment.SmallWeapDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/tvWeaponDesDetail"
                android:id="@+id/prgBarFireRate"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                android:layout_marginStart="15dp"
                android:max="10"
                android:progress="5"
                android:scaleY="2"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.0"/>

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/prgBarFireRate"
                android:id="@+id/prgBarBSpeed"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                android:max="2000"
                android:progress="100"
                android:scaleY="2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/prgBarDamage"
                android:layout_marginTop="4dp"/>

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/prgBarFireRate"
                android:id="@+id/prgBarAmmo"
                app:layout_constraintTop_toTopOf="@+id/textView6"
                android:max="100"
                android:progress="50"
                android:scaleY="2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/prgBarFireRate"
                android:layout_marginTop="4dp"/>

        <TextView
                android:text="@string/bSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/tvWeaponDesDetail"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

        <TextView
                android:text="@string/ammo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/tvWeaponDesDetail"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

        <TextView
                android:text="@string/fireRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/tvWeaponDesDetail"
                app:layout_constraintStart_toStartOf="@+id/tvWeaponDesDetail"
                android:layout_marginTop="28dp"
                android:textSize="16sp"/>

        <TextView
                android:text="@string/damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/tvWeaponDesDetail"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/prgBarFireRate"
                android:id="@+id/prgBarDamage"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                android:max="100"
                android:progress="50"
                android:scaleY="2"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/prgBarFireRate"/>

        <ImageView
                android:layout_width="243dp"
                android:layout_height="124dp"
                tools:src="@tools:sample/avatars"
                android:id="@+id/imgWeaponDetail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/todo"/>

        <TextView
                android:text="@string/todo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvWeaponNameDetail"
                app:layout_constraintTop_toBottomOf="@+id/imgWeaponDetail"
                app:layout_constraintEnd_toEndOf="@+id/imgWeaponDetail"
                app:layout_constraintStart_toStartOf="@+id/imgWeaponDetail"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        <TextView
                android:text="@string/todo"
                android:layout_width="326dp"
                android:layout_height="47dp"
                android:id="@+id/tvWeaponDesDetail"
                app:layout_constraintTop_toBottomOf="@+id/tvWeaponNameDetail"
                app:layout_constraintEnd_toEndOf="@+id/tvWeaponNameDetail"
                app:layout_constraintStart_toStartOf="@+id/tvWeaponNameDetail"
                android:layout_marginTop="5dp"
                android:textAlignment="center"/>

        <TextView
                android:text="@string/todo"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvWeaponDetailType"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvWeaponDesDetail"
                app:layout_constraintStart_toStartOf="@+id/tvWeaponDesDetail"
                android:layout_marginStart="50dp"/>

        <TextView
                android:text="@string/todo"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvWeaponDetailFireMode"
                app:layout_constraintEnd_toEndOf="@+id/tvWeaponDesDetail"
                app:layout_constraintTop_toBottomOf="@+id/tvWeaponDesDetail"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"/>

        <Button
                android:text="@string/get"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:id="@+id/btnBuyWeapon"
                app:layout_constraintTop_toBottomOf="@+id/prgBarBSpeed"
                app:layout_constraintEnd_toEndOf="@+id/tvWeaponDesDetail"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                app:cornerRadius="10dp"
                app:icon="@mipmap/ic_buy_foreground"
                app:iconSize="25dp"
                app:iconTintMode="multiply"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>