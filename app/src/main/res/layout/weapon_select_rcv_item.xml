<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="180dp"
            android:layout_height="80dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/imgWeaponSelect"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:overScrollMode="always"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="horizontal"
            android:verticalScrollbarPosition="defaultPosition"/>

    <TextView
            android:text="@string/todo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeaponSelect"
            app:layout_constraintEnd_toEndOf="@+id/imgWeaponSelect"
            app:layout_constraintStart_toStartOf="@+id/imgWeaponSelect"
            app:layout_constraintTop_toBottomOf="@+id/imgWeaponSelect"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"/>

    <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="@+id/imgWeaponSelect"
            app:layout_constraintTop_toBottomOf="@+id/tvWeaponSelect"
            app:layout_constraintStart_toStartOf="@+id/imgWeaponSelect"/>

    <View
            android:id="@+id/divider5"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toEndOf="@+id/imgWeaponSelect"
            app:layout_constraintTop_toTopOf="@+id/imgWeaponSelect"
            app:layout_constraintBottom_toBottomOf="@+id/divider4"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="2dp"/>

    <View
            android:id="@+id/divider6"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toStartOf="@+id/imgWeaponSelect"
            app:layout_constraintBottom_toBottomOf="@+id/divider4"
            app:layout_constraintTop_toTopOf="@+id/imgWeaponSelect"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>