<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="150dp">

    <TextView
            android:text="@string/todo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleItemHomeNews"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imgItemHomeNews"
            android:maxLength="200"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:maxLines="2"/>

    <TextView
            android:text="@string/todo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtDescriptionItemHomeNews"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleItemHomeNews"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/txtTitleItemHomeNews"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/imgItemHomeNews"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/txtDateItemHomeNews"/>

    <TextView
            android:text="@string/todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDateItemHomeNews"
            app:layout_constraintStart_toStartOf="@+id/txtDescriptionItemHomeNews"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            android:layout_marginBottom="5dp"/>

    <ImageView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgItemHomeNews"
            android:contentDescription="@string/todo"
            app:layout_constraintTop_toTopOf="@+id/txtTitleItemHomeNews"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/imgItemHomeNews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>