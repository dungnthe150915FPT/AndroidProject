<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <Button
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:id="@+id/btnBuyWeapon2"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="20dp"
            app:icon="@mipmap/ic_buy_foreground"
            app:iconSize="25dp"
            app:iconTintMode="multiply"
            android:layout_marginTop="10dp"
            app:iconPadding="0dp"
            android:contentDescription="@string/get"
            android:background="#FF1010"
            android:backgroundTint="#FF0000"
            android:backgroundTintMode="multiply"
            android:layout_marginEnd="10dp"/>

    <ImageView
            android:layout_width="97dp"
            android:layout_height="84dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgWeapon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/app_name"/>

    <TextView
            android:text="@string/todo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/tvDisplayName"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgWeapon"
            android:layout_marginStart="5dp"
            app:layout_constraintHorizontal_bias="0.398"
            app:layout_constraintEnd_toStartOf="@+id/tvPrice"
            android:textSize="20sp"/>

    <TextView
            android:text="@string/todo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            app:layout_constraintStart_toStartOf="@+id/tvDisplayName"
            app:layout_constraintTop_toBottomOf="@+id/tvDisplayName"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/btnBuyWeapon2"/>

    <TextView
            android:text="@string/todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@+id/tvDisplayName"
            app:layout_constraintStart_toEndOf="@+id/tvDisplayName"
            android:layout_marginStart="15dp"
            android:textColor="#F80000"
            android:textStyle="bold"/>

    <View
            android:id="@+id/divider3"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imgWeapon"/>
</androidx.constraintlayout.widget.ConstraintLayout>